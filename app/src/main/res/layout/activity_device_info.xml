<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F7"
    tools:context=".DeviceInfoActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Device Information Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFFFFF"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Device Information"
                        android:textSize="13sp"
                        android:textColor="#6E6E73"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:letterSpacing="0.02"
                        android:layout_marginBottom="12dp" />

                    <View
                        android:id="@+id/divider1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E5E5EA"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/deviceModelLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Model"
                        android:textSize="15sp"
                        android:textColor="#1D1D1F"
                        android:layout_marginBottom="4dp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/deviceModelValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#86868B"
                        android:textIsSelectable="true"
                        android:layout_marginBottom="16dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E5E5EA"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/manufacturerLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Manufacturer"
                        android:textSize="15sp"
                        android:textColor="#1D1D1F"
                        android:layout_marginBottom="4dp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/manufacturerValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#86868B"
                        android:textIsSelectable="true"
                        android:layout_marginBottom="16dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E5E5EA"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/brandLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Brand"
                        android:textSize="15sp"
                        android:textColor="#1D1D1F"
                        android:layout_marginBottom="4dp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/brandValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#86868B"
                        android:textIsSelectable="true" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- System Information Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFFFFF"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="System Information"
                        android:textSize="13sp"
                        android:textColor="#6E6E73"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:letterSpacing="0.02"
                        android:layout_marginBottom="12dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E5E5EA"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/androidVersionLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Android Version"
                        android:textSize="15sp"
                        android:textColor="#1D1D1F"
                        android:layout_marginBottom="4dp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/androidVersionValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#86868B"
                        android:textIsSelectable="true"
                        android:layout_marginBottom="16dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E5E5EA"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/sdkVersionLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SDK Version"
                        android:textSize="15sp"
                        android:textColor="#1D1D1F"
                        android:layout_marginBottom="4dp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/sdkVersionValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#86868B"
                        android:textIsSelectable="true"
                        android:layout_marginBottom="16dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E5E5EA"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/apiLevelLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="API Level"
                        android:textSize="15sp"
                        android:textColor="#1D1D1F"
                        android:layout_marginBottom="4dp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/apiLevelValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#86868B"
                        android:textIsSelectable="true" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Device Details Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFFFFF"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Device Details"
                        android:textSize="13sp"
                        android:textColor="#6E6E73"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:letterSpacing="0.02"
                        android:layout_marginBottom="12dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E5E5EA"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/deviceIdLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Device ID"
                        android:textSize="15sp"
                        android:textColor="#1D1D1F"
                        android:layout_marginBottom="4dp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/deviceIdValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#86868B"
                        android:textIsSelectable="true"
                        android:fontFamily="monospace"
                        android:layout_marginBottom="16dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E5E5EA"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/deviceNameLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Device Name"
                        android:textSize="15sp"
                        android:textColor="#1D1D1F"
                        android:layout_marginBottom="4dp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/deviceNameValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#86868B"
                        android:textIsSelectable="true"
                        android:layout_marginBottom="16dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E5E5EA"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/hardwareLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hardware"
                        android:textSize="15sp"
                        android:textColor="#1D1D1F"
                        android:layout_marginBottom="4dp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/hardwareValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#86868B"
                        android:textIsSelectable="true"
                        android:layout_marginBottom="16dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E5E5EA"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/productLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Product"
                        android:textSize="15sp"
                        android:textColor="#1D1D1F"
                        android:layout_marginBottom="4dp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/productValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#86868B"
                        android:textIsSelectable="true" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Build Information Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#FFFFFF"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Build Information"
                        android:textSize="13sp"
                        android:textColor="#6E6E73"
                        android:textStyle="bold"
                        android:textAllCaps="true"
                        android:letterSpacing="0.02"
                        android:layout_marginBottom="12dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E5E5EA"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/buildIdLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Build ID"
                        android:textSize="15sp"
                        android:textColor="#1D1D1F"
                        android:layout_marginBottom="4dp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/buildIdValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#86868B"
                        android:textIsSelectable="true"
                        android:layout_marginBottom="16dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E5E5EA"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/buildTypeLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Build Type"
                        android:textSize="15sp"
                        android:textColor="#1D1D1F"
                        android:layout_marginBottom="4dp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/buildTypeValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:textColor="#86868B"
                        android:textIsSelectable="true"
                        android:layout_marginBottom="16dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#E5E5EA"
                        android:layout_marginBottom="12dp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/fingerprintLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fingerprint"
                        android:textSize="15sp"
                        android:textColor="#1D1D1F"
                        android:layout_marginBottom="4dp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/fingerprintValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="13sp"
                        android:textColor="#86868B"
                        android:textIsSelectable="true"
                        android:fontFamily="monospace" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
